            ]
        });

        $('#postId').combobox({
            width: '100%',
            panelWidth: 200,
            panelHeight: 300,
            url: '/Post/GetAllEntities',
            mode: 'remote',
            valueField: 'id',
            textField: 'name',
        });
        $('#levelId').combogrid({
